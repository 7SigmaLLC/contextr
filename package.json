{
  "name": "contextr",
  "version": "1.0.8",
  "description": "A lightweight library that packages your project's code files into structured context for LLMs.  Enables single-shot code context generation and supports dynamic packaging for LLM agents.",
  "keywords": [
    "context",
    "code",
    "llm",
    "ai",
    "single-shot",
    "grep"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/7sigma/file-context-builder.git"
  },
  "scripts": {
    "build": "tsc",
    "prepare": "tsc",
    "example": "yarn tsx example-usage.ts > .context.out"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "chalk": "^5.4.1",
    "fast-glob": "^3.3.3",
    "tsc": "^2.0.4",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "typescript": "^5.7.3"
  }
}
